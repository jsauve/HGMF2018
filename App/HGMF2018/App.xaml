<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HGMF2018.App">
	<Application.Resources>
		<ResourceDictionary>
			<Style x:Key="TweetTextStyle" TargetType="Label">
	            <Setter Property="FontSize">
	                <OnPlatform x:TypeArguments="x:Double" Android="19" iOS="16" WinPhone="14" />
	            </Setter>
        	</Style>
			<Style x:Key="TweetNameStyle" TargetType="Label">
	            <Setter Property="FontSize">
	                <OnPlatform x:TypeArguments="x:Double" Android="16" iOS="13" WinPhone="14" />
	            </Setter>
        	</Style>
			<Style x:Key="TweetHandleStyle" TargetType="Label">
	            <Setter Property="FontSize">
	                <OnPlatform x:TypeArguments="x:Double" Android="14" iOS="11" WinPhone="14" />
	            </Setter>
        	</Style>
			<Style x:Key="TweetFooterStyle" TargetType="Label">
	            <Setter Property="FontSize">
	                <OnPlatform x:TypeArguments="x:Double" Android="14" iOS="11" WinPhone="14" />
	            </Setter>
        	</Style>
			<Style x:Key="ScheduleMainLabel" TargetType="Label">
				<Setter Property="FontSize" >
	                <OnPlatform x:TypeArguments="x:Double" Android="19" iOS="16" WinPhone="14" />
	            </Setter>
			</Style>
		</ResourceDictionary>
	</Application.Resources>
</Application>
